{% extends 'base.html.twig' %}

{% block title %}Redemption{% endblock %}

{% block body %}
    <div class="container">
    <h1>Redemption</h1>

    <table class="table-info">
        <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ redemption.id }}</td>
            </tr>
            <tr>
                <th scope="row">Guest id</th>
                <td>{{ redemption.guestId }}</td>
            </tr>
            <tr>
                <th scope="row">Reward id</th>
                <td>{{ redemption.rewardId }}</td>
            </tr>
            <tr>
                <th scope="row">Redemption Date</th>
                <td>{{ redemption.redemptionDate ? redemption.redemptionDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th scope="row">Points redeemed</th>
                <td>{{ redemption.pointsRedeemed }}</td>
            </tr>
            <tr>
                <th scope="row">Created at</th>
                <td>{{ redemption.createdAt ? redemption.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th scope="row">Updated at</th>
                <td>{{ redemption.updatedAt ? redemption.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    </div>
{% endblock %}
