{% extends 'base.html.twig' %}

{% block title %}Guest{% endblock %}

{% block body %}
    <div>
        <h1>My Profile</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ guest.id }}</td>
                </tr>
                <tr>
                    <th>First Name</th>
                    <td>{{ guest.firstName }}</td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>{{ guest.lastName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ guest.email }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ guest.phone }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ guest.address }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ guest.city }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ guest.state }}</td>
                </tr>
                <tr>
                    <th>Zip</th>
                    <td>{{ guest.zip }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ guest.country }}</td>
                </tr>
            </tbody>
        </table>
        <a class="btn btn-primary"role="button" href="{{ path('app_guest_edit', {'id': guest.id}) }}">Edit</a>

        {{ include('guest/_delete_form.html.twig') }}
    </div>
{% endblock %}
